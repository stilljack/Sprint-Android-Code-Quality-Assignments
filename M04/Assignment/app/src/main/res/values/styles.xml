<resources>

    <!-- Base application theme. -->
    <style name="CalcTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/orbitron_black</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="calcButtonBar2" parent="Widget.AppCompat.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:backgroundTint">@color/colorBackground</item>
    </style>
    <style name="calcButtonBar" parent="Widget.AppCompat.Button">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:elevation">5dp</item>
        <item name="android:backgroundTint">@color/colorBackground</item>
    </style>
</resources>
